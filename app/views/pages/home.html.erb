<section class="my-16 md:my-26">
  <div class="container mx-auto">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl mb-6">Ready to Book Your Wedding Photography?</h2>
      <p class="max-w-2xl mx-auto mb-8 text-foreground">Let's create beautiful memories together. Contact me to check availability for your wedding date.</p>
    </div>
    <div class="text-center">
      <%= link_to "Get In Touch", pages_contact_path, class: "btn-gold" %>
    </div>
  </div>
</section>
