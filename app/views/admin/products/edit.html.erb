<section class="pt-24 md:pt-28 lg:pt-32 bg-default min-h-screen">
  <div class="container mx-auto py-20 px-8">
    <h1 class="title mb-4">Edit Product</h1>
    <div class="flex justify-center items-center">
      <%= form_with model: [ :admin, @product ], local: true do |f| %>
        <div class="mb-4 space-y-3">
          <%= f.label :title, class: "block font-bold text-lg" %>
          <%= f.text_field :title, class: "border rounded-md px-3 py-2 w-full" %>
          <%= f.label :description, class: "block font-bold text-lg" %>
          <%= f.text_field :description, class: "border rounded-md px-3 py-2 w-full" %>
          <%= f.label :price, class: "block font-bold text-lg" %>
          <%= f.number_field :price, step: 0.01, min: 0, class: "border rounded-md px-3 py-2 w-full" %>
          <%= f.label :image, "Select Product Cover", class: "block font-bold text-lg" %>
          <%= f.file_field :image, class: "btn-primary" %>
          <%= f.submit "Update", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
