<section class="pt-24 md:pt-28 lg:pt-32">
  <div class="container mx-auto py-20 px-8">
    <h1 class="title mb-2">Portfolio</h1>
    <p class="text-center text-foreground max-w-2xl mx-auto mb-12" >A collection of cherished moments from weddings across Europe's most beautiful locations.</p>

    <div class="gallery-grid">
      <% @galleries.each do |gallery| %>
        <div class="aspect-[3/4] relative group overflow-hidden">
          <% if gallery.images.attached? %>
            <%= image_tag url_for(gallery.images.first), class: "w-full h-full object-cover rounded-lg" %>
          <% end %>
          <div class="absolute inset-0 rounded-lg group-hover:backdrop-blur-[1px] bg-black/0 group-hover:bg-black/40 transition-colors duration-500 cursor-pointer"></div>
            <%= link_to gallery.title, gallery_path(gallery), class: "absolute inset-0 flex flex-col justify-center items-center rounded-lg translate-y-full group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-500 text-4xl font-playfair text-white" %>
        </div>
      <% end %>
      </div>
  </div>
</div >
