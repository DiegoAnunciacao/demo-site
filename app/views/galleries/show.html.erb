<section class="pt-24 md:pt-28 lg:pt-32 bg-default">
  <div class="container mx-auto py-20 px-8">
    <h1 class="title mb-12"><%= @gallery.title %></h1>
    <div class="gallery-grid">
      <% @gallery.gallery_img.each do |image| %>
        <%= link_to url_for(image), data: { fancybox: "gallery" } do %>
          <%= image_tag url_for(image), class: "w-full h-full object-cover rounded-lg" %>
        <% end %>
      <% end %>
    </div>
  </div>
</section >

<div class="gallery-grid">
      <% @galleries.each do |gallery| %>
        <div class="aspect-[3/4] relative group overflow-hidden rounded-lg">

          <% if gallery.cover_img.attached? %>
            <%= link_to url_for(gallery.cover_img), data: { fancybox: "gallery-#{gallery.id}" } do %>
              <%= image_tag gallery.cover_img, class: "w-full h-full object-cover" %>
            <% end %>
          <% end %>

          <% gallery.gallery_img.each do |image| %>
            <%= link_to url_for(image), data: { fancybox: "gallery-#{gallery.id}" }, style: "display: none;" do %>
              <%= image_tag image, style: "display: none;" %>
            <% end %>
          <% end %>

        </div>
      <% end %>
    </div>

<div class="absolute inset-0 group-hover:backdrop-blur-[1px] bg-black/0 group-hover:bg-black/40 transition-colors duration-500 cursor-pointer"></div>
          <span class="absolute inset-0 flex flex-col justify-center items-center rounded-lg translate-y-full group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-500 text-4xl font-playfair text-white"><%= gallery.title %></span>
