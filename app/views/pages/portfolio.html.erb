<section class="pt-24 md:pt-28 lg:pt-32 bg-default">
  <div class="container mx-auto py-20 px-8">
    <h1 class="title mb-2">Portfolio</h1>
    <p class="text-center text-foreground max-w-2xl mx-auto mb-12" >A collection of cherished moments from weddings across Europe's most beautiful locations.</p>

    <div class="gallery-grid" data-controller="fancybox">
      <% @galleries.each do |gallery| %>
        <div class="aspect-[3/4] relative group overflow-hidden rounded-lg">

          <% if gallery.cover_img.attached? %>
            <%= link_to url_for(gallery.cover_img), data: { fancybox: "gallery-#{gallery.id}" } do %>
              <%= image_tag gallery.cover_img, class: "w-full h-full object-cover" %>
            <% end %>
          <% end %>

          <div class="pointer-events-none">
            <div class="absolute inset-0 group-hover:backdrop-blur-[1px] bg-black/0 group-hover:bg-black/40 transition-colors duration-500 rounded-lg"></div>

            <span class="absolute inset-0 flex flex-col justify-center items-center rounded-lg translate-y-full group-hover:translate-y-0 opacity-0 group-hover:opacity-100 transition-all duration-500 text-4xl font-playfair text-white">
              <%= gallery.title %>
            </span>
          </div>

          <% gallery.gallery_img.each do |image, index| %>
            <%= image_tag url_for(image), data: { fancybox: "gallery-#{gallery.id}" }, style: "display:none;" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section >
