<div>
  <h2 class="title roun">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
  <div class="mt-8 space-y-6">
    <input type="hidden" name="remember" value="true"/>
    <div class="rounded-md shadow-sm -space-y-px">
      <div>
        <%= f.label :email, class: "sr-only", for: "email-address" %> <%=
          f.email_field :email, id: "email-address", autofocus: true, autocomplete: "email", placeholder: "Email address", class: "p-3 block w-full rounded-t-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
      <div>
        <%= f.label :password, for: "password", class: "sr-only" %>
        <%= f.password_field :password, placeholder: "password", autocomplete: "current_password", class: "p-3 block w-full rounded-b-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="flex items-center justify-between">
      <div class="field flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500
        border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" %>
      </div>
      <div class="text-sm">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-indigo-600
          hover:text-indigo-500" %>
        <% end %>
      </div>
    </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", class: "btn-primary w-full" %>
    </div>
  </div>
  <% end %>
</div>
<%= render 'devise/shared/flash' %>
